{
  "name": "phash-js",
  "version": "0.2.3",
  "description": "Perceptual image hashing in the browser without using HTML canvas",
  "main": "dist/phash.js",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "cp src/magick.wasm dist/ && cp src/magick.js dist/ && watchify src/index.js -o dist/phash.js",
    "build": "cp src/magick.wasm dist/ && cp src/magick.js dist/ && browserify src/index.js -o dist/phash.js",
    "lint": "eslint ./ --ext .js .",
    "lint:fix": "eslint --fix ./ --ext .js .",
    "test": "npx jest"
  },
  "keywords": [
    "phash",
    "perceptual",
    "hash",
    "wasm",
    "webassembly",
    "imagemagick"
  ],
  "author": "Arhey",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@babel/plugin-transform-modules-commonjs": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "babel-eslint": "^10.1.0",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.6.3",
    "watchify": "^3.11.1"
  },
  "dependencies": {
    "stacktrace-js": "^2.0.2"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "@babel/preset-env"
          ],
          "plugins": [
            "@babel/plugin-transform-runtime"
          ]
        }
      ]
    ]
  }
}
